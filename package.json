{
  "name": "portfolio-tracker",
  "private": true,
  "engines": {
    "node": ">=22.19.0",
    "pnpm": ">=10.15.1"
  },
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "turbo run build",
    "boundaries": "turbo boundaries",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @portfolio/auth generate",
    "db:push": "turbo -F @portfolio/db push",
    "db:studio": "turbo -F @portfolio/db studio",
    "dev-db:start": "pnpm -F @portfolio/db dev-db:start",
    "dev-db:stop": "pnpm -F @portfolio/db dev-db:stop",
    "dev-db:destroy": "pnpm -F @portfolio/db dev-db:destroy",
    "dev-db:psql": "pnpm -F @portfolio/db dev-db:psql",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @portfolio/webapp...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@portfolio/eslint-config": "workspace:^",
    "@portfolio/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.6",
    "glob": "^13.0.0",
    "prettier": "catalog:",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "prettier": "@portfolio/prettier-config"
}
